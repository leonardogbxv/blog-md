<header class="bg-gray pt-3 pb-3">
  <div class="text-light text-center pt-5 pb-5">
    <h1 class="font-weight-normal h-title">
      <a href="/" class="a-off">Blog MD</a>
    </h1>
    <p class="text-white-50">Some text here for now...</p>
    <nav class="nav justify-content-center">
      <a href="/" class="nav-link text-light figure-caption">Blog</a>
      <a href="https://github.com/leonardogbxv/blog-md" class="nav-link text-light figure-caption">Github</a>

      <% if(userId) { %> 
        <a href="/posts/new" class="nav-link text-primary figure-caption">New post</a>
      <% } %>

      <% if(userId) { %> 
        <a href="/admin/upload" class="nav-link text-primary figure-caption">Upload</a>
      <% } %>
    </nav>
  </div>

  <% if(userId) { %> 
    <form action="/admin/logout" method="POST" class="session-auth">
      <div class="bg-success text-light small">Admin logged!</div>
      <button class="bg-danger text-light small mt-2">Logout</button>
    </form>
  <% } else %>
</header>