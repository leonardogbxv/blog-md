<div class="form-group">
  <label for="title">Title</label>
  <input required value="<%= post.title %>" type="text" name="title" id="title" class = "form-control"/>
</div>
<div class="form-group">
  <label for="title">Category</label>
  <input required value="<%= post.category %>" type="text" name="category" id="category" class = "form-control"/>
</div>
<div class="form-group">
  <label for="description">Description</label>
  <textarea required name="description" id="description" class="form-control"><%= post.description %></textarea>
</div>
<div class="form-group">
  <label for="markdown">Markdown</label>
  <textarea required name="markdown" id="markdown" class="form-control"><%= post.markdown %></textarea>
</div>

<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-dark">Save</button>